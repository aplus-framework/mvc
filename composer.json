{
	"name": "natanfelles/mvc",
	"type": "library",
	"description": "The Framework MVC Library",
	"keywords": [
		"app",
		"application",
		"mvc",
		"model",
		"view",
		"controller",
		"entity",
		"layout",
		"pages",
		"api",
		"resource"
	],
	"homepage": "https://the-framework.gitlab.io/libraries/mvc.html",
	"license": "MIT",
	"authors": [
		{
			"name": "Natan Felles",
			"email": "natanfelles@gmail.com"
		}
	],
	"require": {
		"php": ">=8.0",
		"ext-json": "*",
		"natanfelles/autoload": "^1.4",
		"natanfelles/cache": "^1.3",
		"natanfelles/cli": "^1.7",
		"natanfelles/database": "^2.2",
		"natanfelles/database-extra": "^1.0",
		"natanfelles/date": "^1.0",
		"natanfelles/debug": "^1.1",
		"natanfelles/email": "^1.3",
		"natanfelles/http": "^3.0",
		"natanfelles/http-client": "^2.2",
		"natanfelles/image": "^1.2",
		"natanfelles/language": "^1.2",
		"natanfelles/log": "^1.1",
		"natanfelles/pagination": "^1.6",
		"natanfelles/routing": "^1.8",
		"natanfelles/session": "^1.4",
		"natanfelles/validation": "^1.4"
	},
	"require-dev": {
		"ext-xdebug": "*",
		"ergebnis/composer-normalize": "^2.13",
		"natanfelles/coding-standard": "^1.1",
		"phpmd/phpmd": "^2.10",
		"phpstan/phpstan": "^0.12",
		"phpunit/phpunit": "^9.5"
	},
	"autoload": {
		"psr-4": {
			"Framework\\MVC\\": "src/"
		},
		"files": [
			"src/helpers.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\MVC\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
		"post-update-cmd": [
			"composer dump-autoload"
		]
	},
	"support": {
		"email": "natanfelles@gmail.com",
		"issues": "https://gitlab.com/the-framework/libraries/mvc/issues",
		"wiki": "https://gitlab.com/the-framework/libraries/mvc/wikis/home",
		"source": "https://gitlab.com/the-framework/libraries/mvc",
		"docs": "https://the-framework.gitlab.io/libraries/mvc/docs/"
	}
}
